{
  "name": "forkify",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass dist/sass/main.scss dist/css/style.css -w",
    "compile:sass": "node-sass dist/sass/main.scss dist/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' dist/css/style.comp.css -o dist/css/style.prefix.css",
    "compress:css": "node-sass dist/css/style.prefix.css dist/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Slashflex/Forkify.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Slashflex/Forkify/issues"
  },
  "homepage": "https://github.com/Slashflex/Forkify#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "concat": "^1.0.3",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  }
}
